@import "macchiato.css";

* {
	/*font-family: JetBrainsMono Nerd Font;*/Cam
	'
	font-size: 15px;
  border: none;
  border-radius: 0;
  min-height: 0;
}

window#waybar {
  background-color: rgba(26, 27, 38, 0.1);
  color: #ffffff;
}

#window { color: #64727d; }

#workspaces {
  margin-left: 10px;
  margin-right: 10px
}

#workspaces button.active {
  color: @peach;
}

#workspaces button {
  color: @text;
}

#custom-separator_dot,
#custom-separator {
  color: @green;
}

#clock.time {
  color: @flamingo;
}

#clock.week {
  color: @sapphire;
}

#clock.month {
  color: @sapphire;
}

#clock.calendar {
  color: @mauve;
}

#bluetooth.disabled {
  color: @subtext0;
}

#bluetooth.on {
  color: @blue;
}

#bluetooth.connected {
  color: @sapphire;
}

#network.disabled {
  color: @subtext0;
}

#network.disconnected {
  color: @red;
}

#network.wifi {
  color: @teal;
}

#network.ethernet {
	color: @teal;
}

#idle_inhibitor {
  margin-right: 2px;
}

#idle_inhibitor.deactivated {
  color: @subtext0;
}

#custom-dunst.off {
  color: @subtext0;
}

#custom-airplane_mode {
  margin-right: 2px;
}

#custom-airplane_mode.off {
  color: @subtext0;
}

#custom-night_mode {
  margin-right: 2px;
}

#custom-night_mode.off {
  color: @subtext0;
}

#custom-dunst {
  margin-right: 2px;
}

#custom-media.Paused {
  color: @subtext0;
}

#custom-webcam {
  color: @maroon;
  margin-right: 3px;
}

#privacy-item.screenshare {
  color: @peach;
  margin-right: 5px;
}

#privacy-item.audio-in {
  color: @pink;
  margin-right: 4px;
}

#custom-recording {
  color: @red;
  margin-right: 4px;
}

#custom-geo {
  color: @yellow;
  margin-right: 4px;
}

#taskbar {
  margin-top: 10px;
  margin-right: 10px;
  margin-left: 10px;
}

#taskbar button.active {
  background-color: alpha(@surface1, 0.7);
  border-radius: 10px;
}

#tray {
  margin-bottom: 10px;
  margin-right: 10px;
  margin-left: 10px;
}

#tray>.needs-attention {
  background-color: alpha(@maroon, 0.7);
  border-radius: 10px;
}

#custom-logout-menu {
	color: @red;
	background-color: #252733;
	margin-right: 10px;
	margin-top: 5px;
	margin-bottom: 5px;
  border-radius: 6px;
  padding-right: 10px;
  padding-left: 10px;
}

#pulseaudio,
#clock,
#bluetooth,
#network,
#cpu,
#temperature,
#disk,
#memory {
  background-color: #252733;
  border-radius: 7px;
  margin-right: 2px;
  margin-left: 2px;
  margin-top: 5px;
  margin-bottom: 5px;
  padding-top: 3px;
  padding-bottom: 3px;
  padding-right: 6px;
  padding-left: 6px;
}

#cpu { color: @red; }
#temperature { margin-left: 10px; color: @blue; }
#disk { color: @green; }
#memory { color: @peach; }
#pulseaudio { color: @yellow; }

